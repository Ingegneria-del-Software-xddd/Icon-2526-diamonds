@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix ex: <http://example.org/diamonds#> .
@prefix qb: <http://purl.org/linked-data/cube#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema1: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:BeautyLevel a rdfs:Class .

ex:BeautyRule a rdfs:Class .

ex:CaratFeature a rdfs:Class ;
    rdfs:subClassOf ex:DiamondFeature .

ex:ClarityFeature a rdfs:Class ;
    rdfs:subClassOf ex:DiamondFeature .

ex:ColorFeature a rdfs:Class ;
    rdfs:subClassOf ex:DiamondFeature .

ex:CutFeature a rdfs:Class ;
    rdfs:subClassOf ex:DiamondFeature .

ex:Diamond a rdfs:Class .

ex:DiamondFeature a rdfs:Class .

ex:DimensionFeature a rdfs:Class ;
    rdfs:subClassOf ex:DiamondFeature .

ex:QualityCondition a rdfs:Class .

ex:QualityThreshold a rdfs:Class .

ex:DiamondsKnowledgeBase a qb:DataSet ;
    ex:numCompositeRules 0 ;
    ex:numThresholds 7 ;
    dc:creator "Sistema di Intelligenza Artificiale" ;
    dc:date "2024"^^xsd:gYear ;
    dc:description "Base di conoscenza per la valutazione della qualità dei diamanti basata su caratteristiche delle 4C" ;
    dc:title "Knowledge Base per Valutazione Diamanti" .

ex:LOW a ex:BeautyLevel ;
    rdfs:label "LOW" ;
    ex:appreciation "Basso apprezzamento" ;
    dc:description "Livello di bellezza LOW" .

ex:appliesToFeature a rdf:Property .

ex:carat a ex:CaratFeature ;
    rdfs:label "carat" ;
    ex:featureCategory "weight" ;
    ex:hasThreshold ex:threshold_carat_0 ;
    dc:description "Caratteristica del diamante: carat" ;
    schema1:unitCode "CT" .

ex:clarity a ex:ClarityFeature ;
    rdfs:label "clarity" ;
    ex:featureCategory "purity" ;
    ex:hasThreshold ex:threshold_clarity_3 ;
    dc:description "Caratteristica del diamante: clarity" .

ex:color a ex:ColorFeature ;
    rdfs:label "color" ;
    ex:featureCategory "color_grade" ;
    ex:hasThreshold ex:threshold_color_2 ;
    dc:description "Caratteristica del diamante: color" .

ex:conditionValue a rdf:Property .

ex:cut a ex:CutFeature ;
    rdfs:label "cut" ;
    ex:featureCategory "craftsmanship" ;
    ex:hasThreshold ex:threshold_cut_1 ;
    dc:description "Caratteristica del diamante: cut" .

ex:depth a ex:DimensionFeature ;
    rdfs:label "depth" ;
    ex:featureCategory "dimension" ;
    ex:hasThreshold ex:threshold_depth_5 ;
    dc:description "Caratteristica del diamante: depth" ;
    schema1:unitCode "MM" .

ex:featureCategory a rdf:Property .

ex:featureValue a rdf:Property .

ex:hasCondition a rdf:Property .

ex:hasFeature a rdf:Property .

ex:hasThreshold a rdf:Property .

ex:hierarchicalValue a rdf:Property .

ex:indicatesBeautyLevel a rdf:Property .

ex:mapsToDatasetColumn a rdf:Property .

ex:price a ex:DiamondFeature ;
    rdfs:label "price" ;
    ex:hasThreshold ex:threshold_price_4 ;
    dc:description "Caratteristica del diamante: price" .

ex:ruleName a rdf:Property .

ex:table a ex:DimensionFeature ;
    rdfs:label "table" ;
    ex:featureCategory "dimension" ;
    ex:hasThreshold ex:threshold_table_6 ;
    dc:description "Caratteristica del diamante: table" ;
    schema1:unitCode "MM" .

ex:thresholdDescription a rdf:Property .

ex:thresholdOperator a rdf:Property .

ex:thresholdValue a rdf:Property .

ex:threshold_carat_0 a ex:QualityThreshold ;
    ex:hierarchicalValue 2 ;
    ex:indicatesBeautyLevel ex:HIGH ;
    ex:thresholdDescription "Caratura non superiore a medium per buon rapporto qualità-prezzo" ;
    ex:thresholdOperator "<=" ;
    ex:thresholdValue "medium"^^xsd:string .

ex:threshold_clarity_3 a ex:QualityThreshold ;
    ex:hierarchicalValue 3 ;
    ex:indicatesBeautyLevel ex:MEDIUM ;
    ex:thresholdDescription "Chiarezza almeno SI1 per poche inclusioni visibili ad occhio nudo" ;
    ex:thresholdOperator ">=" ;
    ex:thresholdValue "si1"^^xsd:string .

ex:threshold_color_2 a ex:QualityThreshold ;
    ex:hierarchicalValue 3 ;
    ex:indicatesBeautyLevel ex:MEDIUM ;
    ex:thresholdDescription "Colore almeno H (H, G, F, E, D accettabili)" ;
    ex:thresholdOperator ">=" ;
    ex:thresholdValue "h"^^xsd:string .

ex:threshold_cut_1 a ex:QualityThreshold ;
    ex:hierarchicalValue 3 ;
    ex:indicatesBeautyLevel ex:MEDIUM ;
    ex:thresholdDescription "Taglio almeno very_good per buona brillantezza" ;
    ex:thresholdOperator ">=" ;
    ex:thresholdValue "very_good"^^xsd:string .

ex:threshold_depth_5 a ex:QualityThreshold ;
    ex:hierarchicalValue 2 ;
    ex:indicatesBeautyLevel ex:MEDIUM ;
    ex:thresholdDescription "Profondità ottimale (60-64%) per massima brillantezza" ;
    ex:thresholdOperator "==" ;
    ex:thresholdValue "medium"^^xsd:string .

ex:threshold_price_4 a ex:QualityThreshold ;
    ex:hierarchicalValue 2 ;
    ex:indicatesBeautyLevel ex:HIGH ;
    ex:thresholdDescription "Prezzo non superiore a medium per essere considerato conveniente" ;
    ex:thresholdOperator "<=" ;
    ex:thresholdValue "medium"^^xsd:string .

ex:threshold_table_6 a ex:QualityThreshold ;
    ex:hierarchicalValue 2 ;
    ex:indicatesBeautyLevel ex:MEDIUM ;
    ex:thresholdDescription "Tavola ottimale (55-65%) per proporzioni bilanciate" ;
    ex:thresholdOperator "==" ;
    ex:thresholdValue "medium"^^xsd:string .

ex:HIGH a ex:BeautyLevel ;
    rdfs:label "HIGH" ;
    ex:appreciation "Alto apprezzamento" ;
    dc:description "Livello di bellezza HIGH" .

ex:MEDIUM a ex:BeautyLevel ;
    rdfs:label "MEDIUM" ;
    ex:appreciation "Apprezzamento medio" ;
    dc:description "Livello di bellezza MEDIUM" .

